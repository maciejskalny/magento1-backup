<config>
    <modules>
        <Virtua_GuestBook>
            <version>0.1.0</version>
        </Virtua_GuestBook>
    </modules>
    <frontend>
        <routers>
            <guestbook>
                <use>standard</use>
                <args>
                    <module>Virtua_GuestBook</module>
                    <frontName>guestbook</frontName>
                </args>
            </guestbook>
        </routers>
        <layout>
            <updates>
                <guestbook module="Virtua_GuestBook">
                    <file>guestbook.xml</file>
                </guestbook>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <guestbook>
                <use>admin</use>
                <args>
                    <module>Virtua_GuestBook</module>
                    <frontName>guestbook</frontName>
                </args>
            </guestbook>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <guestbookmenu module="guestbook">
                <title>Virtua</title>
                <sort_order>999</sort_order>
                <children>
                    <items module="guestbook">
                        <title>Guest Book</title>
                        <sort_order>0</sort_order>
                        <action>guestbook/adminhtml_guestbook</action>
                    </items>
                </children>
            </guestbookmenu>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <guestbook>
                            <title>GuestBook Module</title>
                            <sort_order>200</sort_order>
                        </guestbook>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <crontab>
        <jobs>
            <guestbook_cron_task>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>guestbook/observer::crontask</model>
                </run>
            </guestbook_cron_task>
        </jobs>
    </crontab>
    <global>
        <blocks>
            <guestbook>
                <class>Virtua_GuestBook_Block</class>
            </guestbook>
        </blocks>
        <helpers>
            <guestbook>
                <class>Virtua_GuestBook_Helper</class>
            </guestbook>
        </helpers>
        <models>
            <guestbook>
                <class>Virtua_GuestBook_Model</class>
                <resourceModel>guestbook_resource</resourceModel>
            </guestbook>
            <guestbook_resource>
                <class>Virtua_GuestBook_Model_Resource</class>
                <entities>
                    <guestbook>
                        <table>guestbook</table>
                    </guestbook>
                </entities>
            </guestbook_resource>
        </models>
        <resources>
            <guestbook_setup>
                <setup>
                    <module>Virtua_GuestBook</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </guestbook_setup>
            <guestbook_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </guestbook_write>
            <guestbook_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </guestbook_read>
        </resources>
    </global>
</config>