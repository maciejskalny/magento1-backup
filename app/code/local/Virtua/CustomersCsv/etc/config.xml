<config>
    <modules>
        <Virtua_CustomersCsv>
            <version>0.1.0</version>
        </Virtua_CustomersCsv>
    </modules>
    <crontab>
        <jobs>
            <customerscsv_cron_task>
                <schedule>
                    <cron_expr>35 9 * * *</cron_expr>
                </schedule>
                <run>
                    <model>customerscsv/observer::export</model>
                </run>
            </customerscsv_cron_task>
        </jobs>
    </crontab>
    <global>
        <models>
            <customerscsv>
                <class>Virtua_CustomersCsv_Model</class>
            </customerscsv>
        </models>
    </global>
</config>
